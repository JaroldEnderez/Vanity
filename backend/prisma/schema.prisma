generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Branch {
  id        String   @id @default(uuid())
  name      String   @unique
  address   String
  createdAt DateTime @default(now())

  staff    Staff[]
  services Service[]
  sales    Sale[]
}

model Staff {
  id        String   @id @default(uuid())
  name      String
  role      String? // OWNER, ADMIN, STYLIST, CASHIER, etc.
  branchId  String?
  createdAt DateTime @default(now())

  branch Branch? @relation(fields: [branchId], references: [id])
  sales  Sale[]
}

model Service {
  id            String   @id @default(uuid())
  name          String
  description   String?
  durationMin   Int?
  price         Float
  isActive      Boolean  @default(true)
  usesMaterials Boolean  @default(false)
  createdAt     DateTime @default(now())

  materials ServiceMaterial[]
  addOns    AddOn[]
  sales     Sale[]
  Branch    Branch?           @relation(fields: [branchId], references: [id])
  branchId  String?
}

model Material {
  id        String   @id @default(uuid())
  name      String
  unit      String // e.g. "ml", "g", "pcs"
  stock     Float
  createdAt DateTime @default(now())

  serviceMaterials   ServiceMaterial[]
  inventoryMovements InventoryMovement[]
  saleMaterials      SaleMaterial[]
}

model ServiceMaterial {
  id         String @id @default(uuid())
  serviceId  String
  materialId String
  quantity   Float

  service  Service  @relation(fields: [serviceId], references: [id])
  material Material @relation(fields: [materialId], references: [id])
}

model AddOn {
  id        String @id @default(uuid())
  name      String
  price     Float
  serviceId String

  service    Service     @relation(fields: [serviceId], references: [id])
  saleAddOns SaleAddOn[]
}

model Sale {
  id         String  @id @default(uuid())
  serviceId  String
  branchId   String
  staffId    String
  customerId String?

  basePrice Float
  addOns    Float
  total     Float

  createdAt DateTime @default(now())

  service  Service   @relation(fields: [serviceId], references: [id])
  branch   Branch    @relation(fields: [branchId], references: [id])
  staff    Staff     @relation(fields: [staffId], references: [id])
  customer Customer? @relation(fields: [customerId], references: [id])

  saleAddOns SaleAddOn[]
  materials  SaleMaterial[]
  payments   Payment[]
}

model SaleAddOn {
  id      String @id @default(uuid())
  saleId  String
  addOnId String
  price   Float

  sale  Sale  @relation(fields: [saleId], references: [id])
  addOn AddOn @relation(fields: [addOnId], references: [id])
}

model SaleMaterial {
  id         String @id @default(uuid())
  saleId     String
  materialId String
  quantity   Float

  sale     Sale     @relation(fields: [saleId], references: [id])
  material Material @relation(fields: [materialId], references: [id])
}

model Customer {
  id        String   @id @default(uuid())
  name      String
  phone     String?  @unique
  createdAt DateTime @default(now())

  sales Sale[]
}

model Payment {
  id        String   @id @default(uuid())
  saleId    String
  method    String // e.g. cash, gcash, card
  amount    Float
  createdAt DateTime @default(now())

  sale Sale @relation(fields: [saleId], references: [id])
}

model InventoryMovement {
  id          String   @id @default(uuid())
  materialId  String
  quantity    Float
  type        String // SALE, ADJUSTMENT, RESTOCK, CORRECTION
  referenceId String? // e.g. sale id or restock id
  createdAt   DateTime @default(now())

  material Material @relation(fields: [materialId], references: [id])
}
