datasource db {
  provider = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}


model Branch {
  id            String          @id @default(uuid())
  name          String          @unique
  address       String
  lastActiveAt  DateTime?       // For owner view: online if updated in last 5 min
  createdAt     DateTime        @default(now())
  sales         Sale[]
  services      Service[]
  staff         Staff[]
  account       BranchAccount?
}

model BranchAccount {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  branchId  String   @unique
  createdAt DateTime @default(now())
  branch    Branch   @relation(fields: [branchId], references: [id])
}

model OwnerAccount {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Staff {
  id        String   @id @default(uuid())
  name      String
  role      String?
  branchId  String?
  createdAt DateTime @default(now())
  sales     Sale[]
  branch    Branch?  @relation(fields: [branchId], references: [id])

  @@index([branchId]) // Optimize staff queries by branch
}

model Service {
  id            String            @id @default(uuid())
  name          String            @unique
  description   String?
  durationMin   Int?
  price         Float
  isActive      Boolean           @default(true)
  createdAt     DateTime          @default(now())
  branchId      String?
  usesMaterials Boolean           @default(false)
  addOns        AddOn[]
  saleServices  SaleService[]
  Branch        Branch?           @relation(fields: [branchId], references: [id])
  materials     ServiceMaterial[]

  @@index([isActive, branchId]) // Optimize service queries
}

model Material {
  id                 String              @id @default(uuid())
  name               String
  unit               String
  stock              Float
  createdAt          DateTime            @default(now())
  inventoryMovements InventoryMovement[]
  saleMaterials      SaleMaterial[]
  serviceMaterials   ServiceMaterial[]
}

model ServiceMaterial {
  id         String   @id @default(uuid())
  serviceId  String
  materialId String
  quantity   Float
  material   Material @relation(fields: [materialId], references: [id])
  service    Service  @relation(fields: [serviceId], references: [id])

  @@index([serviceId]) // Optimize service material lookups
}

model AddOn {
  id         String      @id @default(uuid())
  name       String
  price      Float
  serviceId  String
  service    Service     @relation(fields: [serviceId], references: [id])
  saleAddOns SaleAddOn[]
}

model Sale {
  id         String        @id @default(uuid())
  branchId   String
  staffId    String
  customerId String?
  name       String?       // Custom name for the draft/session

  status     SaleStatus    @default(DRAFT)

  basePrice  Float         @default(0)
  addOns     Float         @default(0)
  total      Float         @default(0)

  cashReceived Float?      // Cash given by customer
  changeGiven  Float?      // Change returned to customer

  createdAt  DateTime      @default(now())
  updatedAt  DateTime?
  endedAt    DateTime?

  saleServices SaleService[]
  saleAddOns   SaleAddOn[]
  saleMaterials SaleMaterial[]
  payments     Payment[]

  branch     Branch    @relation(fields: [branchId], references: [id])
  staff      Staff     @relation(fields: [staffId], references: [id])
  customer   Customer? @relation(fields: [customerId], references: [id])

  @@index([status, branchId]) // Optimize getDraftSessions queries
  @@index([endedAt]) // Optimize date range queries for sales history
  @@index([createdAt]) // Optimize sorting
}

model SaleAddOn {
  id      String @id @default(uuid())
  saleId  String
  addOnId String
  price   Float
  addOn   AddOn  @relation(fields: [addOnId], references: [id])
  sale    Sale   @relation(fields: [saleId], references: [id])
}

model SaleService {
  id        String   @id @default(uuid())
  saleId    String
  serviceId String
  qty       Int      @default(1)
  price     Float    // unit price at time of sale

  sale      Sale     @relation(fields: [saleId], references: [id])
  service   Service  @relation(fields: [serviceId], references: [id])

  createdAt DateTime @default(now())

  @@index([saleId]) // Optimize queries for session items
}

model SaleMaterial {
  id         String   @id @default(uuid())
  saleId     String
  materialId String
  quantity   Float
  material   Material @relation(fields: [materialId], references: [id])
  sale       Sale     @relation(fields: [saleId], references: [id])

  @@index([saleId, materialId]) // Optimize material lookups per sale
}

model Customer {
  id        String   @id @default(uuid())
  name      String
  phone     String?  @unique
  createdAt DateTime @default(now())
  sales     Sale[]
}

model Payment {
  id        String   @id @default(uuid())
  saleId    String
  method    String
  amount    Float
  createdAt DateTime @default(now())
  sale      Sale     @relation(fields: [saleId], references: [id])
}

model InventoryMovement {
  id          String   @id @default(uuid())
  materialId  String
  quantity    Float
  type        String
  referenceId String?
  createdAt   DateTime @default(now())
  material    Material @relation(fields: [materialId], references: [id])
}

enum SaleStatus {
  DRAFT      // In-progress, can be modified
  COMPLETED  // Finalized, immutable
  CANCELLED  // Cancelled, immutable
}
